<!DOCTYPE html>
<html>
  <head>
   <%- include("head.ejs")%>
  <body>
    <!-- Navbar (sit on top) -->
    
    <!-- Header -->
   <%- include("header.ejs") %>
    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <%- include("about.ejs") %>
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br />
          <% productos.forEach(element =>{ %>
            <a href="detailProduct/<%- element.id %>">
            <h4><%= element.nombre %></h4>
            <p class="ps-text-grey">
              <%= element.descripcion %><br/><%= element.precio %>
            </p></a>
            <% }) %>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
     <%- include("footer.ejs") %>
    </div>
  </body>
</html>
